= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),class:"new_user") do |f|
  -unless  f.error_notification.nil?
    %div.alert.alert-dismissable.alert-danger  
      = f.error_notification
      = render "devise/shared/error_messages", :target => @user
  %h2 Sign up

  .form-inputs
    = f.text_field :first_name,required: true, autofocus: true,:placeholder => "First Name", :class => "form-control"
    %br
    = f.text_field :last_name,required: true, autofocus: true,:placeholder => "Last Name", :class => "form-control"
    %br
    = f.email_field :email, required: true, autofocus: true,:placeholder => "Email address", :class => "form-control"
    %br
    = f.password_field :password, required: true ,:placeholder => "Password", :class => "form-control"
    %br
    = f.password_field  :password_confirmation, required: true,:placeholder => "Password confirmation", :class => "form-control"
  %br
  .form-actions
    = f.button :submit, "Sign up" ,class: 'btn btn-lg btn-primary btn-block'
%div.devise_links
  = render "devise/shared/links"
